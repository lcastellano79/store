{% extends "master.html.twig" %}

{% block mainContent %}
    
    <div class="products">
    <h2>Add Category</h2>
        <form method="POST">
            <label for="category_name">Category Name:</label> <input type="text" name="category_name" id="category_name" value=""><br>
            <input class="adm_button" type="submit" value="Add" id="submit">
        </form>
        {% if errorList %}
            <div class="error">
                <h2>Errors</h2>
                <ul>
                    {% for error in errorList %}
                        <li> {{ error }} </li>
                    {% endfor %}    
                </ul>
            </div>
        {% endif %}
    </div>
                
{% endblock %}
