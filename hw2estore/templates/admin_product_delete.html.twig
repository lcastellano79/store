{% extends "master.html.twig" %}

{% block title %}Delete Product{% endblock %}

{% block mainContent %}
    
    <div class="products">
        <h2> Are you sure you want to delete product: {{ product.product_name }}?</h2>
        <p>{{ message }}<br>Select 'Delete Product' to proceed.</p>   
        {% if product %}
                    <div class="item_card">
                        <a href="/product/{{ product.id }}"><img alt="description" src="{{product.image_path}}" height="350"></a>
                        <div class="item_detail">
                        <form class="delete" method="POST">
                            <input type="submit" value="Delete Product" id="submit" class="adm_button">
                        </form>
                        <h2>CDN$ {{product.price}} </h2>
                        <p>{{ product.description }}</p>
                        </div>
                    </div>      
            {% else %}
                <p>Invalid product.</p>
            {% endif %}
    </div>

{% endblock %}
